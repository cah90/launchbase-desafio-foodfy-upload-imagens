{% extends "admin/common/layout.njk" %}

{% block head %}
  <title>Receita - Admin Foodfy</title>
  <link rel="stylesheet" href="/admin/common.css">
  <link rel="stylesheet" href="/admin/chefs.css">
{% endblock %}

{% block content %}

<h3>Chef: {{chef.name}}</h3>
<a href="/admin/chefs/{{chef.id}}/edit" class="btn btn-edit">Editar chef</a>
<div class="avatar" style="background-image: url({{chef.avatar_url}})"></div>
<h1>{{chef.name}}</h1>
<h3 class="recipes-sub"> {{ recipes.length }} {{ "receita" if recipes.length == 1 else "receitas" }} </h3>

<h2>Receitas</h2>

<div class="wrapper-cards">
{% for recipe in recipes %}
<div class="cards">
<img class="card-avatar" src="{{recipe.image}}">
<div class="card-info">
<p class="card-main-title">{{recipe.title}}</p>
<p class="card-author">por {{chef.name}}</p>
<a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
</div>
</div>
{% endfor %}
</div>

{% endblock %}

