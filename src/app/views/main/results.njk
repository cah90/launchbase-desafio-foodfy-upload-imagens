{% extends "./layout.njk" %} 

{% block head %}
  <title>Busca: {{filter}} </title>
  <link rel="stylesheet" href="main/main.css">
{% endblock %}

{% block header %}
  <form action="/results" method="GET">
    <input type="text" name="filter" placeholder="Busque uma receita">
    <button type="submit" class="btn">Buscar</button>
  </form>
{%endblock%}

{% block content %}
<h3 class="results">Buscando por "{{filter}}"</h3>

<section class="cards">
  {% for recipe in recipes %}
  <div class="card" id="{{recipe.name}}">
      <div class="card__image-container">
        <a href="/recipes/{{recipe.id}}"><img src="{{recipe.image}}" alt="{{recipe.title}}"></a>
    </div>

    <div class="card__recipe">
      <p class="card__recipe-name">{{recipe.title}}</p>
      <p class="card__author">por {{recipe.name}}</p>
    </div>
  </div>
  {% endfor %}
 </section> 
 {% endblock %}

